{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
		"module": "node16",
		"resolveJsonModule": true,

		"lib": ["dom", "es2022"],
		"types": ["vite/client"],

		"noEmit": true,
		"allowImportingTsExtensions": true,
		"isolatedModules": true,

		"strict": true,
		"skipLibCheck": true,

		"noImplicitAny": false
	}
}
